{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "Key": "",
    "Issuer": "BizQuits",
    "Audience": "BizQuits",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Security": {
    "AllowedOrigins": ["http://localhost:5173"],
    "RateLimiting": {
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "AuthPermitLimit": 5,
      "AuthWindowSeconds": 60
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/bizquits-.log", "rollingInterval": "Day" } }
    ]
  },
  "AllowedHosts": "*"
}
